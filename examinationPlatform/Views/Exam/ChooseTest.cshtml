<script>
    layui.use(['form', 'table'],
        function () {
            var table = layui.table;
            var form = layui.form;
            //监听单元格编辑
            //头工具栏事件
            table.on('toolbar(test)',
                function (obj) {
                    var checkStatus = table.checkStatus(obj.config.id);
                    switch (obj.event) {
                        case 'addUser':
                            xadmin.open('编辑', '/html/add_user.html', 600, 400);
                            break;
                        case 'getCheckData':
                            var delList = [];
                            var data = checkStatus.data;
                            data.forEach(function (n, i) {
                                delList.push(n.id);
                            });
                            console.log(delList);
                            if (delList != '') {
                                layer.confirm('确定增加所选项吗？', function (index) {
                                    $.ajax({
                                        url: '/exam/AddTestsToExam?exam=@ViewBag.id ',
                                        type: 'post',
                                        dataType: 'text',
                                        data: "id=" + delList,
                                        success: function (data) {
                                            console.log(data);
                                            if (data == '1') {
                                                layer.msg('增加成功');
                                                table.reload(obj.config.id, {});
                                            } else {
                                                layer.msg('增加失败');
                                            }
                                        },
                                        'error': function () {
                                            layer.msg('系统错误');
                                        }
                                    })
                                })
                            } else {
                                layer.tips('请选择需要删除的行', $('#batchDel'), {
                                    tips: [3, '#5fb878']
                                })
                            }
                            break;
                        case 'getCheckLength':
                            var data = checkStatus.data;
                            layer.msg('选中了：' + data.length + ' 个');
                            break;
                        case 'isAll':
                            layer.msg(checkStatus.isAll ? '全选' : '未全选');
                            break;
                        case 'addManyUsers':
                            xadmin.open('编辑', '/html/user_tip.html', 500, 400);
                            break;
                    };
                });

            form.on('submit(search)',
                function (data) {
                    console.log(data);
                    table.reload('test',
                        {
                            page:
                            {
                                curr: 1 //重新从第 1 页开始
                            }
                            , where: { name: data.field.username }//这里传参  向后台
                            , url: "/admin/FindUser"//后台做模糊搜索接口路径
                            , method: 'get'
                        });
                    return false;
                });


        });


</script>
